{
  "name": "better-anime",
  "version": "1.0.0-00R-Takemikazuchi",
  "description": "Better Anime Streaming",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "dist": "npm run build && electron-builder",
